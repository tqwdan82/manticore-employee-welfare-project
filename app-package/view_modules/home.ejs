<!DOCTYPE html>
<html lang="en">

  <%- include('include/head'); -%>

  <% if(typeof query.action !== 'undefined' && (query.action === 'collection' || query.action === 'collectionOpt' || query.action === 'collectionSelfPage'||  query.action === 'collectionAssistPage' ||  query.action === 'history') ) { %>
    <body class="text-center">
  <% } else { %>
    <body id="page-top">
  <% } %>

  <!-- Page Wrapper -->
  <% if( (typeof query.action !== 'undefined' && (query.action !== 'collection' && query.action !== 'collectionOpt' && query.action !== 'collectionSelfPage' && query.action !== 'collectionAssistPage' && query.action !== 'history')) 
      || (typeof query.action === 'undefined')){ %>
  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

      <!-- Sidebar - Brand -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/web?action=dashboard">
        <div class="sidebar-brand-icon">
          <i class="fas fa-hands-helping"></i>
        </div>
        <div class="sidebar-brand-text mx-3">Employee Welfare</div>
      </a>

      <!-- Divider -->
      <hr class="sidebar-divider my-0">
      
        <%- include('include/menu'); -%>

      <!-- Divider -->
      <hr class="sidebar-divider d-none d-md-block">

      <!-- Sidebar Toggler (Sidebar) -->
      <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
      </div>

    </ul>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        
        <div class="container-fluid">
          <% if(typeof query.action !== 'undefined') { %>
            <%- include('pages/' + query.action); -%>
          <% } else { %>
            <%- include('pages/dashboard'); -%>
          <% } %>
        </div>
        <!-- /.container-fluid -->

      </div>

      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('include/footer'); -%>
      <!-- End of Footer -->

    </div>
    
    <!-- End of Content Wrapper -->

  </div>
  <% } else { %>
    <%- include('pages/' + query.action); -%>
  <% } %>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <% if(typeof query.action !== 'undefined' && (query.action !== 'collection' && query.action !== 'collectionOpt' && query.action !== 'collectionSelfPage' && query.action !== 'collectionAssistPage' && query.action !== 'history') ) { %>
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('include/uiplugins'); -%>
  <% } %>
</body>

</html>
