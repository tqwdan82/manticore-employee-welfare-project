<script src="web/scripts/createEmp.js"></script>
<div id="overlay">
    <div class="text text-center">
      <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
</div>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">New Employee</h1>
</div>

<div class="row" ng-app="crtEmpApp" ng-controller="crtEmpCtrl">
    <div class="col-lg-12">
        <form role="form" method="GET" action="">
            <div class="row">
                <div class="form-group col-lg-6" >
                    <label>Employee No.*</label>
                    <input class="form-control" name="empNo" ng-model="data.EmpID">
                </div>
                <div class="form-group col-lg-6">
                    <label>Employee Name*</label>
                    <input class="form-control" name="empName" ng-model="data.EmpName">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-12">
                    <label>Employee Department/Unit/Project*</label>
                    <input class="form-control" name="empDep" ng-model="data.EmpDep">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6" >
                    <label for="empStartDte">Employment Start Date</label>
                    <input class="form-control" type="text" datepicker="" ng-model="data.EmpStartDate" dp-format="yyyy-m-d" />
                    <!-- <div id='empStartDteCont' class="input-append">
                        <input type="form-control text" name="empStartDte" ng-model="data.EmpStartDate">
                        <span class="add-on">
                            <i class="far fa-calendar-alt"></i>
                        </span>
                    </div>
                    <script type="text/javascript">
                        $('#empStartDteCont').datetimepicker({
                            format: 'dd/MM/yyyy',
                            pickTime: false
                        });
                    </script> -->
                </div>
                <div class="form-group col-lg-6">
                    <label for="empEndDte">Employment End Date</label>
                    <input class="form-control" type="text" datepicker="" ng-model="data.EmpEndDate" dp-format="yyyy-m-d" />
                    <!-- <div id='empEndDteCont' class="input-append">
                        <input type="form-control text" name="empEndDte" ng-model="data.EmpEndDate">
                        <span class="add-on">
                            <i class="far fa-calendar-alt"></i>
                        </span>
                    </div>
                    <script type="text/javascript">
                        $('#empEndDteCont').datetimepicker({
                            format: 'dd/MM/yyyy',
                            pickTime: false
                        });
                    </script> -->
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Employee Contact No.</label>
                    <input class="form-control" name="empContact" ng-model="data.EmpContact">
                </div>
            </div>
            <button type="button" class="btn btn-primary" ng-class="createEmpBtnStatus" aria-disabled="{{createModBtnAria}}" ng-disabled="createModItemAriaDisabled" ng-click="create()">Create</button>
        </form>
    </div>
</div>

