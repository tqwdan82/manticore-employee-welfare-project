<script src="web/scripts/createItem.js"></script>
<div id="overlay">
    <div class="text text-center">
      <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
</div>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">New Distribution Item</h1>
</div>

<div class="row" ng-app="crtItemApp" ng-controller="crtItemCtrl">
    <div class="col-lg-12">
        <div class="card-body">
            <form role="form" method="GET" action="">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label>Item Name*</label>
                        <input class="form-control" name="itemName" ng-model="data.ItemName">
                    </div>
                    <div class="form-group col-lg-6" >
                        <label>Total Stock Count*</label>
                        <input class="form-control" name="itemStockCount" ng-model="data.ItemCount">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6" >
                        <label>Item Valid Date Start</label>
                        <input class="form-control" type="text" datepicker="" ng-model="data.ItemDistrStartDate" dp-format="yyyy-m-d" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Item Valid Date End</label>
                        <input class="form-control" type="text" datepicker="" ng-model="data.ItemDistrEndDate" dp-format="yyyy-m-d" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label>Item Description</label>
                        <textarea rows="3" class="form-control" name="itemDescr" ng-model="data.ItemDescription"></textarea>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" ng-class="createItemBtnStatus" aria-disabled="{{createModBtnAria}}" ng-disabled="createModItemAriaDisabled" ng-click="create()">Create Item</button>
            </form>
        </div>
    </div>
</div>