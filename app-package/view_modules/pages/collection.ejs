<script src="web/scripts/collection.js"></script>
<link href="web/styles/collection.css" rel="stylesheet">
<form class="form-signin" ng-app="collectionApp" ng-controller="collectionCtrl">
    <i class="fas fa-hands-helping" style="font-size: 72px; color: rgb(12, 54, 97);"></i><br/>
    <h1 class="h3 mb-3 font-weight-normal" style="margin-top: 15px;">Wellfare Collection Service</h1>
    <label for="inputEmpNo" class="sr-only">Employee No.</label>
    <input type="text" ng-model="inputEmpNo" id="inputEmpNo" class="form-control" placeholder="Employee No." required="" autofocus="">
    <button class="btn btn-lg btn-primary btn-block" style="margin-top: 15px;" type="button" ng-click="continue()">Continue</button>
    <p class="mt-5 mb-3 text-muted">Powered by Manti-Core</p>
</form>

<!-- Invalid ack modal -->
<div class="modal fade bd-example-modal-lg" id="invalidEmpNoModal" tabindex="-2" role="dialog" aria-labelledby="invalidEmpNoModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="invalidEmpNoModalTitle">Invalid Employee Number</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                Please enter a valid employee number
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>